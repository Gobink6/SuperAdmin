<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#87ceeb"
    tools:context=".Windform4Activity">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Link Users and WindMill"
            android:textColor="#000000"
            android:textSize="30dp" />
    <EditText
        android:id="@+id/ulphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="User Phone No"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="45dp"
        android:drawableTint="#D2691E"
        android:background="@drawable/round_white"
        android:paddingLeft="15dp" />

    <EditText
        android:id="@+id/ulname"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/round_white"
        android:ems="16"
        android:hint="First Name"
        android:paddingLeft="20dp"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/ulname_last"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/round_white"
        android:ems="16"
        android:hint="Last Name"
        android:paddingLeft="20dp"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/ulemail"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:ems="16"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:background="@drawable/round_white" />
    <Spinner
        android:id="@+id/ulspinner1"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="265dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:hint="Role"
        android:paddingLeft="15dp"
        android:entries="@array/Role_arrays"
        android:background="@drawable/round_white"
        android:drawableTint="@color/black" />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/round_white"
        android:drawableTint="#D2691E"
        android:entries="@array/Windform"
        android:paddingLeft="15dp" />


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="375dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_white"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="Select windmill" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:text="Link"
        android:onClick="userlink"
        android:background="#00bfff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:background="#FFF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="windmill:"
            android:textSize="25sp"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/tvItemSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>
